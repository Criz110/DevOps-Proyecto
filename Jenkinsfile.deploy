pipeline {
    agent any

    parameters {
        string(
            name: 'IMAGE_TAG',
            defaultValue: '',
            description: 'Tag de imagen a desplegar (ej: 12-a3f9c21)'
        )
    }

    stages {

        stage('Deploy Version') {
            steps {
                dir('Servicios/Ejemplo-Microservicios') {
                    sh """
                        echo "Deploying version: ${params.IMAGE_TAG}"

                        if [ -z "${params.IMAGE_TAG}" ]; then
                          echo "ERROR: IMAGE_TAG vac√≠o"
                          exit 1
                        fi

                        IMAGE_TAG=${params.VERSION} docker compose up -d \
                            eureka-server \
                            auth-service \
                            cliente-service \
                            saludo-service \
                            api-gateway
                    """
                }
            }
        }
    }
}