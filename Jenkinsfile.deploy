pipeline {
    agent any

    parameters {
        string(
            name: 'IMAGE_TAG',
            description: 'Versi√≥n a desplegar'
        )
    }

    stages {

        stage('Deploy Version') {
            steps {
                dir('Servicios/Ejemplo-Microservicios') {
                    sh """
                        echo "Deploying version: ${params.IMAGE_TAG}"
                        IMAGE_TAG=${params.IMAGE_TAG} docker compose up -d
                    """
                }
            }
        }
    }
}